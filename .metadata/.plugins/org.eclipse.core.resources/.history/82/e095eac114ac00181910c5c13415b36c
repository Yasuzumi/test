package com.internousdev.ecsite.action;
import java.sql.SQLException;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.ecsite.dao.ItemItemCreateCompleteDAO;
import com.opensymphony.xwork2.ActionSupport;


public class ItemCreateCompleteAction extends ActionSupport implements SessionAware {

		private String itemName;
		private String itemPrice;
		private String itemStock;
		private Map<String,Object>session;
		private ItemItemCreateCompleteDAO itemCreateCompleteDAO = new ItemItemCreateCompleteDAO();

		public String execute()throws SQLException {
				ItemItemCreateCompleteDAO.createUser(session.get("itemName").toString(),
								session.get("itemPrice").toString(),
								session.get("itemStock").toString());

						String result = SUCCESS;

						return result;
		}

		public String getItemName(){
			return itemName;
		}

		public void setItemName(String loginUserId){
			this.itemName = loginUserId;
		}

		public String getLoginPassword(){
			return itemPrice;
		}

		public void setLoginPassword(String loginPassword){
			this.itemPrice = loginPassword;
		}

		public String getUserName(){
			return itemStock;
		}

		public void setUserName(String userName){
			this.itemStock = userName;
		}
		public Map<String, Object> getSession(){
				return session;
		}
		@Override
		public void setSession(Map<String,Object> session){
				this.session = session;
		}
		}
